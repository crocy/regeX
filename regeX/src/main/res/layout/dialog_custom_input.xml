<?xml version="1.0" encoding="utf-8"?>

<com.crocx.regex.tutorial.view.CustomInputDialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dialogEditRegex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tutorial_change_dialog_hint_regex"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionDone" />

    <TextView
        android:id="@+id/dialogRegexMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="#F00" />

    <EditText
        android:id="@+id/dialogEditInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tutorial_change_dialog_hint_output"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionDone" />

</com.crocx.regex.tutorial.view.CustomInputDialogView>